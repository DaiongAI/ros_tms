cmake_minimum_required(VERSION 2.8.3)
project(tms_db_access)

find_package(
    catkin REQUIRED 
    COMPONENTS roscpp std_msgs sensor_msgs pcl_ros cv_bridge message_generation 
)

catkin_package(
   CATKIN_DEPENDS roscpp std_msgs message_runtime
)

include_directories(include
  ${catkin_INCLUDE_DIRS}
)

add_executable(db_writer src/tmsdb_db_writer.cpp)
target_link_libraries(db_writer ${catkin_LIBRARIES} mysqlclient)
add_dependencies(db_writer DEPENDS tms_msg_db_gencpp tms_msg_ss_gencpp)

add_executable(db_reader src/tmsdb_db_reader.cpp)
target_link_libraries(db_reader ${catkin_LIBRARIES} mysqlclient)
add_dependencies(db_reader DEPENDS tms_msg_db_gencpp tms_msg_ss_gencpp)